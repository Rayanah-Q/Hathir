{
    "manifest_version": 3,
    "name": "Hathir",
    "version": "1.0",
    "description": "اضافة تضمن لك امانك اثناء تصفح المواقع الحكومية, حملها وانساها, لكن هي ماراح تنساك! بتنبهك اذا كان عليك خطر.",
    "default_locale": "en",
    "icons": {
        "16": "src/assets/scan16.png",
        "32": "src/assets/scan32.png",
        "48": "src/assets/scan48.png",
        "128": "src/assets/scan128.png"
    },
    "action": {
        "default_title": "Hathir",
        "default_popup": "src/popup.html",
        "theme_icons": [
            {   
                "size": 16,
                "light": "src/assets/scan16.png",
                "dark": "src/assets/scanDark16.png"
            },
            {
                "size": 32,
                "light": "src/assets/scan32.png",
                "dark": "src/assets/scanDark32.png"
            }
        ]
    },
     "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://127.0.0.1:8000/*",
        "https://*/"
    ]
}